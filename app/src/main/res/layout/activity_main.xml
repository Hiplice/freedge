<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.v7.widget.RecyclerView>


    <!-- Расписываем кнопки управления -->
    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <!-- Первая кнопка управления -->
        <ImageButton
            android:id="@+id/productMenuButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:background="@drawable/menu_rectangle"
            app:srcCompat="@drawable/products_black" />

        <!-- Вторая кнопка управления -->
        <ImageButton
            android:id="@+id/recipeMenuButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:background="@drawable/menu_rectangle"
            app:srcCompat="@drawable/recipe_black" />

        <!-- Третья кнопка управления -->
        <ImageButton
            android:id="@+id/settingMenuButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:background="@drawable/menu_rectangle"
            app:srcCompat="@drawable/settings_black" />

    </android.support.v7.widget.LinearLayoutCompat>


</LinearLayout>