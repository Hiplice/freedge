<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <!-- Прописан Toolbar -->
    <Toolbar
        android:id="@+id/upperToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/categoryVegetable"
        android:textAlignment="center" />

    <!-- Контейнер для фрагментов-->

    <FrameLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"></FrameLayout>


    <!-- Расписываем кнопки управления -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <!-- Первая кнопка управления -->
        <ImageButton
            android:id="@+id/productMenuButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:background="@drawable/menu_rectangle"
            android:onClick="onProducts"
            app:srcCompat="@drawable/products_black"
            />

        <!-- Вторая кнопка управления -->
        <ImageButton
            android:id="@+id/recipeMenuButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:background="@drawable/menu_rectangle"
            android:onClick="onRecipes"
            app:srcCompat="@drawable/recipe_black" />

        <!-- Третья кнопка управления -->
        <ImageButton
            android:id="@+id/settingMenuButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:background="@drawable/menu_rectangle"
            android:onClick="onSettings"
            app:srcCompat="@drawable/settings_black" />

    </LinearLayout>
</LinearLayout>